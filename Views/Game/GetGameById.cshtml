@model Game

<div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
  <div class="card-header">Name: @Model.Name</div>
  <div class="card-body">
    <h5 class="card-title">Category: @Model.Category</h5>
    <p class="card-text">Price: @Model.Price</p>
    <a class="card-text" asp-controller="Game" asp-action="GetGames">Return to Main menu</a>
  </div>
</div>